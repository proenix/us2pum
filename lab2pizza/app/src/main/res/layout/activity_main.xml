<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="1dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/wybierz_typ_ciasta" />

            <RadioGroup
                android:id="@+id/rBCiastoGroup"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <RadioButton
                    android:id="@+id/rBCiasto"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:checked="true"
                    android:text="?" />

                <RadioButton
                    android:id="@+id/rBCiasto2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="?" />

            </RadioGroup>

            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/wybierz_rozmiar_pizzy" />

            <RadioGroup
                android:id="@+id/rBSizeGroup"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <RadioButton
                    android:id="@+id/rBSize"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:checked="true"
                    android:text="?" />

                <RadioButton
                    android:id="@+id/rBSize2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="?" />

                <RadioButton
                    android:id="@+id/rBSize3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="?" />

            </RadioGroup>

            <TextView
                android:id="@+id/textView3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/wybierz_skladniki_podstawowe" />

            <CheckBox
                android:id="@+id/cBSklPodst"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="?" />

            <CheckBox
                android:id="@+id/cBSklPodst2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="?" />

            <CheckBox
                android:id="@+id/cBSklPodst3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="?" />

            <CheckBox
                android:id="@+id/cBSklPodst4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="?" />

            <CheckBox
                android:id="@+id/cBSklPodst5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="?" />

            <CheckBox
                android:id="@+id/cBSklPodst6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="?" />

            <CheckBox
                android:id="@+id/cBSklPodst7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="?" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/wybierz_skldniki_dodatkowe" />

            <CheckBox
                android:id="@+id/cBSklDod"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="?" />

            <CheckBox
                android:id="@+id/cBSklDod2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="?" />

            <CheckBox
                android:id="@+id/cBSklDod3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="?" />

            <CheckBox
                android:id="@+id/cBSklDod4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="?" />

            <CheckBox
                android:id="@+id/cBSklDod5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="?" />

            <CheckBox
                android:id="@+id/cBSklDod6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="?" />

            <CheckBox
                android:id="@+id/cBSklDod7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="?" />

            <CheckBox
                android:id="@+id/cBSklDod8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="?" />

            <Button
                android:id="@+id/buttonSubmit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/zamow" />

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>